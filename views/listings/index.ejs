
<% layout("/layouts/boilerplate") %>

<style>
  #filters {
  margin-top: 1rem;
  display: flex;
  flex-wrap: wrap;
}

.filter {
  margin-right: 2rem;
  text-align: center;
  opacity: 0.7;
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.filter i {
  font-size: 24px;
  transition: color 0.3s ease;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
  transform: scale(1.05);
}

.filter:hover i,
.filter:hover p {
  color: #ff4500; 
}

.filter p{
  font-size: 0.9rem;
}
.price-info{
  display: none;
}

.tax-toggle{
  border: 1px solid black;
  border-radius: 0.7rem;
  height: 2.5rem;
  padding: 1rem;
  margin-left: 5rem;
  display: flex;
  align-items: center;

}

</style>

<div id="filters" class=" ms-auto">
  <div class="filter">
    <div><i class="fa-solid fa-fire-flame-curved"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-house-user"></i></div>
    <p>House</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-sun"></i></div>
    <p>Mauntain</p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Pools</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-tents"></i></div>
    <p>Camping</p>
  </div>
  
  <div class="filter">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-sailboat"></i></div>
    <p>Boats</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-snowman"></i></div>
    <p>Arctic</p>
  </div>
  <!-- <div class="filter">
    <div><i class="fa-solid fa-water"></i></div>
    <p>Lake</p>
  </div> -->
  
  <div class="tax-toggle">
    <div class="form-check form-switch">
      <input class="form-check-input" 
      type="checkbox" 
      role="switch" 
      id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display Price</label>
    </div>
  </div>

</div>


<div class="row mt-3">
    <% for(let list of allListing) { %>
        <div class="card listing-card container-fluid " style="width: 20rem;">
        <a href="http://localhost:8080/listings/<%= list._id %>">
            <img src="<%= list.image.url %>" class="card-img-top  " alt="Image" style="height: 17rem;">
            <div class="card-img-overlay"></div>
        </a>
            <div class="card-body">
              <p class="card-text">
                <b><%= list.title %></b> <br> 
                <p class="price-info fw-medium">Price: &#8377;<%= list.price ? list.price.toLocaleString("en-IN") : "N/A" %>/night</p>
              </p>
            </div>
        </div>
        <% } %>
</div>


<script>
  let totalGst = document.getElementById("flexSwitchCheckDefault");
  document.addEventListener("click", () =>{
    let total = document.getElementsByClassName('price-info');
    if(totalGst.checked){
      for(let i = 0; i < total.length; i++){
        total[i].style.display = 'inline';
      }
    }
    else{
      for(let i = 0; i < total.length; i++){
        total[i].style.display = 'none';
      }
    }
  })
</script>
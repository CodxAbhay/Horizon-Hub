<% layout("/layouts/boilerplate") %>

<style>
  body {
    background: linear-gradient(135deg, #ffffff, #f2f2f2);
    min-height: 100vh;
    margin: 0;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }
  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    text-align: center;
    padding: 0 20px;
  }
  .hero h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: #333;
  }
  .hero p {
    font-size: 1.25rem;
    margin-bottom: 30px;
    color: #666;
  }
  .hero .btn-group a {
    margin: 0 10px;
    font-size: 1.1rem;
    padding: 10px 25px;
    border-radius: 5px;
    transition: all 0.3s ease;
  }
  .hero .btn-group a:hover {
    transform: translateY(-3px);
  }
</style>

<div class="hero">
  <h1>Welcome to Horizon Hub</h1>
  <p>Your gateway to discovering the best listings and opportunities.</p>
  <div class="btn-group">
    <a href="/login" class="btn btn-primary">Login</a>
    <a href="/signup" class="btn btn-success">Sign Up</a>
    <a href="/listings" class="btn btn-info">Explore</a>
  </div>
</div>
